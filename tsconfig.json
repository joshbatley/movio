{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esNext",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "es7", "dom"],
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": "src",
    "paths": {
      "*" : ["*", "src/*"]
    }
  },
  "include": [
    "types/*",
    "src",
    "src/index.ts",
  ],
  "exclude": ["node_modules"]
}
